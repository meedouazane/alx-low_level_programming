CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = $(NAME)
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(NAME)

$%.o: %.c
	$(CC) $(CFLAGS) -c -o $^ $@

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	rm -f $(RM) *~
oclean:
	rm -f $(OBJ)
fclean: clean
	rm -f $(OBJ)
re: oclean all


